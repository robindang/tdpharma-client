div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') tdpharma-client

    div#navbar-main.navbar-collapse.collapse(uib-collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}', ng-show='isLoggedIn()')
          a(ng-href='{{item.link}}') {{item.title | translate }}

      ul.nav.navbar-nav.navbar-right
        li.dropdown(ng-show='lang')
          a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
            span.flag-icon(ng-class='{"flag-icon-gb":lang=="en","flag-icon-vn":lang=="vn"}')
            span.caret
          ul.dropdown-menu
            li
              a(href='#', ng-click='setLang("en")')
                span.flag-icon.flag-icon-gb
                | &nbsp;English
            li
              a(href='#', ng-click='setLang("vn")')
                span.flag-icon.flag-icon-vn
                | &nbsp;Tiếng Việt

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          a(href='/signup') {{ 'SIGNUP' | translate }}

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a(href='/login') {{ 'LOGIN' | translate }}

        li(ng-show='isLoggedIn()')
          p.navbar-text Hello {{ getCurrentUser().first_name }}

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
          a(href='/settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
          a(href='', ng-click='logout()') {{'LOGOUT' | translate}}