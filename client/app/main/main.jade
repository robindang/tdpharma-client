div(ng-include='"components/templates/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 {{ 'GREETING' | translate }}
    p.lead {{ 'LEADING_GREETING' | translate:text }}
    img.logo(src='assets/images/tdlogo4_50.svg', alt='I\'m Yeoman')

.container
  .row
    .col-lg-12
      h1.page-header Features:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='feature in mc.features')
        li
          a(ng-href='{{feature.link}}', uib-tooltip='{{feature.info}}')
            | {{feature.name}}
            //- button.close(type='button', ng-click='deleteThing(thing)') Ã—
  br
  br
  form.thing-form
    label Want a new feature? Request one here.
    p.input-group
      input.form-control(type='text', placeholder='Request a new feature here.', ng-model='newThing')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='addThing()') Request

footer.footer
  .container
    p
