div(ng-include='"components/navbar/navbar.html"')

.container.cv
  .row
    .col-sm-3
      ul(ng-repeat='category in cc.categories')
        li
          | {{category.name}}
          ul(ng-repeat='subcategory in category.children')
            li {{subcategory.name}}
    .col-sm-9
      .col-md-3.col-sm-4.col-xs-6(ng-repeat='subcategory in cc.activeCategory.children')
        a(ng-href='/categories/{{subcategory.id}}')
          .thumbnail
            //- img(ng-src='{{cic.APP_CONFIG.SERVER_DEFAULT_PICTURE_ENDPOINT}}/{{item.photo_thumb.photo}}', alt='...')
            .caption
              h3 {{subcategory.name}}
