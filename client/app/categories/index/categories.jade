div(ng-include='"components/navbar/navbar.html"')

.container.cv
  .row
    .col-sm-3
      ul(ng-repeat='category in cc.categories')
        li
          a(ng-href='/categories#{{category.name}}')
            | {{category.name}}&nbsp;&nbsp;
            span.badge {{category.children_count}}
          ul(ng-repeat='subcategory in category.children', ng-show='cc.activeCategory===category')
            li
              a(ng-href='/categories/{{subcategory.id}}') {{subcategory.name}}
    .col-sm-9
      .col-md-3.col-sm-4.col-xs-6(ng-repeat='subcategory in cc.activeCategory.children')
        a(ng-href='/categories/{{subcategory.id}}')
          .thumbnail
            .caption
              h3 {{subcategory.name}}
