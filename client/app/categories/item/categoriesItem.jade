div(ng-include='"components/templates/navbar/navbar.html"')

.col-sm-12
  .row
    .col-md-12
      ul.breadcrumb
        li(ng-repeat='breadcrumb in cic.breadcrumbs')
          a(ng-href='{{breadcrumb.link}}') {{breadcrumb.name}}
  .row
    .col-md-2.col-sm-3.col-xs-4(ng-repeat='item in cic.results.data')
      a(ng-href='/inventory/{{item.id}}')
        .thumbnail
          img(ng-src='{{item.photo_thumb.photo | resolve}}', alt='...')
          .caption
            h3 {{item.itemable.name}}
            h5 {{item.itemable.manufacturer}}
            p {{item.sale_price.amount | currency:undefined:0 }}
