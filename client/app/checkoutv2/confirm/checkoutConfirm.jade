div(ng-include='"components/templates/navbar/navbar.html"')

.container
  .row
    .col-md-6
      .well
        p Press enter to clear
        p Barcode: {{cc.barcode}}
    .col-md-6
        h3
          | Total: 
          span.text-danger.ng-binding {{ccc.cart.total | currency}}
        h3
          | Change Due: 
          span.text-success.ng-binding {{ccc.cart.total-ccc.totalPaid | currency}}
        form.form-horizontal.ng-pristine.ng-valid-min.ng-invalid.ng-invalid-required(name='checkoutForm', ng-submit='checkoutForm.$valid && print()')
          .form-group.has-error(ng-class="{ 'has-error': checkoutForm.totalPaid.$error.required }")
            .input-group
              .input-group-addon $
              input#checkoutPaymentAmount.form-control.input-lg.ng-pristine.ng-untouched.ng-valid-min.ng-invalid.ng-invalid-required(type='number', name='totalPaid', step='any', min='0', ng-model='ccc.totalPaid', required='')
          p.text-danger.ng-hide(ng-show='checkoutForm.totalPaid.$error.required && checkoutForm.$dirty') Enter payment amount.
          button.btn.btn-primary.btn-lg.lead(type='submit', ng-disabled='checkoutForm.totalPaid.$error && ccc.totalPaid < ccc.cart.total')
            i.fa.fa-shopping-cart
            | &nbsp;Checkout
