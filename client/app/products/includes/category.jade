.row(ng-init="products.selected=[]")
  .list-group.col-md-6
    a.list-group-item(ng-repeat="x in products.categories", ng-class="{active: x==products.selected[0]}", ng-click="products.selected[0]=x")
      span.badge {{products.categoryMap[x].length}}
      |  {{x}}

  .list-group.col-md-6
    a.list-group-item(ng-repeat="x in products.categoryMap[products.selected[0]]", ng-class="{active: x==products.selected[1]}", ng-click="products.selected[1]=x")
      |  {{x}}
.row(style="text-align:right")
  .col-md-12
    button.btn.btn-default(type="button") Next