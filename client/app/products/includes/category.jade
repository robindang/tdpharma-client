.col-sm-12
  .row(ng-init="pc.selected=[]")
    .col-md-6
      h5 Choose a category
      .list-group
        a.list-group-item(ng-repeat="x in pc.categories", ng-class="{active: x==pc.selected[0]}", ng-click="pc.selected[0]=x")
          span.badge {{x.children.length}}
          |  {{x.name}}
    .col-md-6
      h5 Secondary category
      .list-group
        a.list-group-item(ng-repeat="x in pc.selected[0].children", ng-class="{active: x==pc.selected[1]}", ng-click="pc.selected[1]=x")
          |  {{x.name}}
  .row(style="text-align:right")
    .col-md-12
      button.btn.btn-primary(type="button", ng-click="pc.nextTab()") Next