div(ng-include='"components/templates/navbar/navbar.html"')

.col-sm-12
  .row
    .col-md-12
      ul.pager
        li.previous
          a(href='#' ng-click='pic.goBack()')
            span(aria-hidden='true') &larr;
            |  Back
      .row
        .col-md-3.col-xs-3
          img(ng-src='{{pic.medicine.photo_thumb.photo | resolve}}')
        .col-md-7.col-xs-6
          h3 {{pic.medicine.name}}
          h5 {{pic.medicine.manufacturer}}
        .col-md-2.col-xs-3.text-right
          button.btn.btn-default(ng-show='pic.isReadOnly' ng-click='pic.isReadOnly=false' style='margin-top:20px' disabled)
            i.fa.fa-pencil
            | &nbsp;Edit
      hr
      form.form-horizontal
        .form-group
          label.col-md-2.col-xs-3.control-label(for='concentration') {{ 'CONCENTRATION' | translate }}
          .col-md-10.col-xs-9
            input#concentration.form-control(type='number', placeholder="{{ 'CONCENTRATION' | translate }}", ng-model='pic.medicine.concentration' ng-readonly="pic.isReadOnly" required)        
        .form-group
          label.col-md-2.col-xs-3.control-label(for='unit') {{ 'CONCENTRATION_UNIT' | translate }}
          .col-md-10.col-xs-9
            input#unit.form-control(type='text', placeholder="{{ 'CONCENTRATION_UNIT' | translate }}", ng-model='pic.medicine.concentration_unit' ng-readonly="pic.isReadOnly" required)
          .form-group
          label.col-md-2.col-xs-3.control-label(for='form') {{ 'MEDICINE_FORM' | translate }}
          .col-md-10.col-xs-9
            input#form.form-control(type='text', placeholder="{{ 'MEDICINE_FORM' | translate }}", ng-model='pic.medicine.med_form' ng-readonly="pic.isReadOnly" required)
        .form-group
          label.col-md-2.col-xs-3.control-label(for='mfg_location') {{ 'MFG_LOCATION' | translate }}
          .col-md-10.col-xs-9
            input#mfg_location.form-control(type='text', placeholder="{{ 'MFG_LOCATION' | translate }}", ng-model='pic.medicine.mfg_location' ng-readonly="pic.isReadOnly" required)
        .row
          .col-xs-12.text-right
            .btn.btn-danger(ng-show='!pic.isReadOnly' ng-click='pic.isReadOnly=true') Cancel
            | &nbsp;&nbsp;
            .btn.btn-primary(ng-show='!pic.isReadOnly' ng-click='pic.isReadOnly=true') Save