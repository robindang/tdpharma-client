div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 {{ 'PASSWORD_CHANGE_TITLE' | translate }}
    .col-sm-12
      form.form(name='form', ng-submit='changePassword(form)', novalidate='')
        .form-group
          label {{ 'CURRENT_PASSWORD' | translate }}
          input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='')
          p.help-block(ng-show='form.password.$error.mongoose')
            | {{ errors.other }}
        .form-group
          label {{ 'NEW_PASSWORD' | translate }}
          input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='8', required='')
          p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
            | {{ 'PASSWORD_LENGTH_REQUIREMENT' | translate }}

        p.help-block  {{ message }}

        button.btn.btn-lg.btn-primary(type='submit') {{ 'SAVE_CHANGES' | translate }}
